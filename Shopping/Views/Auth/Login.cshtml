@model Shopping.Models.LoginModel

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.BeginForm())
{
    <table id="Table2" border="0" cellpadding="1" cellspacing="1" style="width:65%">
        <tr>
            <td>
                @Html.ValueFor(m => m.Message)
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    Login
                    <table border="0" cellpadding="1" cellspacing="1" style="width:90%">
                        <tr>
                            <td colspan="3">
                                <hr style="background-color:#0000FF" size="3" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <strong><font color="#000099" style="background-color: #FFFF66">Existing Customers</font></strong>:
                                Please Login
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3"></td>
                        </tr>
                        <tr>
                            <td align="right">
                                @Html.DisplayNameFor(login => login.Username)
                            </td>
                            <td>
                                @Html.TextBoxFor(login => login.Username)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(login => login.Username)
                            </td>
                        </tr>
                        <tr>
                            <td align="right">
                                @Html.DisplayNameFor(login => login.Password)
                            </td>
                            <td>
                                @Html.PasswordFor(login => login.Password)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(login => login.Password)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input type="submit" value="Login" id="btnLogin" name="btnLogin" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="3" valign="bottom">
                                <hr style="background-color:#0000FF" size="3" />
                                @Html.ValueFor(m => m.Status)
                            </td>
                        </tr>
                        <tr style="height:75px">
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td colspan="3">
                                <strong><font color="#006600" style="background-color: #ccffff">New Customers</font></strong>:
                                please
                                @Html.ActionLink("Click here", "Registration", "Auth")
                                to Register.
                            </td>
                        </tr>
                    </table>
                </div>
            </td>
        </tr>
    </table>
}
