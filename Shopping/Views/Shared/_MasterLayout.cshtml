@{ 
    ViewBag.Title = "_MasterLayout";
}

<html>
<head>
    <link href="~/Content/MainStyle.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#navTable tr").hover(function () {
                $(this).addClass("navHighlight");
            },
            function () {
                $(this).removeClass("navHighlight");
            });
        });
    </script>
</head>
<body>
    <table border="0" style="width:100%;">
        <tr>
            <td colspan="2">
                @* Banner image here *@
                <img src="~/res/images/mystorebanner.jpg" alt="mystorebanner" style="display:block; margin:0 auto"/>
            </td>
        </tr>
        <tr>
            <td style="vertical-align:top;">
                <table id="navTable" border="1" style="border-collapse:collapse; font-size:small; white-space:nowrap">
                    <tr>
                        <td>@Html.ActionLink("Login", "Login", "Auth")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Home", "Index", "Home")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Electronics", "Index", "Products", new { catID = 10 }, null)</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Kitchen", "Index", "Products", new { catID = 20 }, null)</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Luggage", "Index", "Products", new { catID = 30 }, null)</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("View Cart", "ViewCart", "Cart")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("News", "News", "Home")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Checkout", "Checkout", "Cart")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Add Product", "Product", "Products")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Upload Image", "UploadImage", "Home")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("View Products", "ViewProducts", "Products")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Contact Us", "ContactUs", "Home")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Change Password", "ChangePassword", "Auth")</td>
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Logout", "Logout", "Auth")</td>
                    </tr>
                </table>
            </td>
            <td style="width:92%;vertical-align:top;padding-left:25px;padding-top:20px">
                @RenderBody()
            </td>
        </tr>
    </table>
</body>
</html>