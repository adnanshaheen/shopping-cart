@model ProductCartModel

@using Shopping.Models;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.BeginForm())
{
    <table style="width:90%">
        <tr>
            <td></td>
            <td style="font-size:medium; font-weight:bold; color:purple">
                @Html.ValueFor(m => m.Product.ShortDesc)
            </td>
            <td></td>
        </tr>
        <tr>
            <td></td>
            <td>
                $@Html.ValueFor(m => m.Product.Price)
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                <img src=@Url.Content("~/res/images/" + @Model.Product.Image) alt="@Model.Product.Image" />
            </td>
            <td align="justify">
                @Html.ValueFor(m => m.Product.LongDesc)
            </td>
            <td></td>
        </tr>
        <tr>
            <td colspan="3">
                <hr style="border-color:#0000FF; border-width:3px"/>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td align="right">
                Please enter quantity
            </td>
            <td>
                @Html.TextBoxFor(m => m.Cart.ProductQuantity)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.Cart.ProductQuantity)
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="button" value="Add to Cart" id="btnAddToCart" style="width:144px" />
            </td>
            <td id="lblAddToCart"></td>
        </tr>
        <tr>
            <td colspan="3"></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="button" value="View Cart" id="btnViewCart" style="width:144px" />
            </td>
            <td>
                <input type="button" value="Continue Shopping" id="btnContShopping" style="width:144px" />
            </td>
        </tr>
    </table>
}